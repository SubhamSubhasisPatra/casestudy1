<mvc:View xmlns:core="sap.ui.core" controllerName="webapp.controller.CreateItem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout">

    <Page title="{i18n>createItem}" class="card">

        <content>
            <VBox fitContainer="true">
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <OverflowToolbarButton icon="sap-icon://nav-back" press="backToHome" type="Transparent"/>
                </OverflowToolbar>
                <l:VerticalLayout class="sapUiContentPadding inputBox" width="100%">
                    <!-- <Label text="Approver Name" labelFor="Approver" /> -->
                    
                    <Input id="leave_type_id" placeholder="Enter Leave Type"  showSuggestion="true" />
                    <Input id="ApproverName_id" placeholder="Enter Approver Name"  showSuggestion="true" />
                    <Input id="leaveCancelReason_id" placeholder="Enter Leave Calcellation Reason" showSuggestion="true" />
                    <Input id="casualLeave_id" placeholder="Enter Remaining Casual Leave " showSuggestion="true" />
                    <Input id="sickLeave_id" placeholder="Enter Remaining Sick Leave " showSuggestion="true" />
                    <Input id="Status_id" placeholder="Enter Status" showSuggestion="true" />
                    <Input id="Reason_id" placeholder="Enter Leave Reason" showSuggestion="true" />
                    <Input id="halfDays_id" placeholder="Enter Total Half Days" showSuggestion="true" />
                    <Input id="TotalDates_id" placeholder="Enter Total Leaves" showSuggestion="true"/>
                    <Input id="start_date_id" type="Date" placeholder="Enter Start Date (MM-DD-YYYY)" showSuggestion="true"/>
                    <Input id="end_date_id" type="Date" placeholder="Enter End Date (MM-DD-YYYY)" showSuggestion="true"/>
                    <Button text="SUBMIT" press="dataSave"/>
                </l:VerticalLayout>
            </VBox>

        </content>
    </Page>

</mvc:View>